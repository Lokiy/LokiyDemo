<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lokiy.demo"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />
    <application
	    android:allowBackup="true"
	    android:icon="@mipmap/ic_launcher"
	    android:label="@string/app_name"
	    android:name=".App"
	    android:supportsRtl="true"
	    android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <activity android:name=".widget.GuideActivity" android:label="Widget/GuideView" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
	    </activity>
	    <activity android:name=".widget.GuaGuaKaActivity" android:label="Widget/GuaGuaKa" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
	    </activity>
	    <activity android:name=".widget.XImageViewActivity" android:label="Widget/XImageView" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
	    </activity>
    </application>

</manifest>